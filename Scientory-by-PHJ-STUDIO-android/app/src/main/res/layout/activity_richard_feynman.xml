<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mainactivity.RichardFeynman">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <Button
            android:layout_width="match_parent"
            android:layout_height="200px"
            android:id="@+id/chapter1"
            android:textSize="38dp"
            android:textColor="#000000"
            android:text="챕터1" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="200px"
            app:layout_constraintTop_toBottomOf="@id/chapter1"
            android:id="@+id/chapter2"
            android:textSize="38dp"
            android:textColor="#000000"
            android:text="챕터2" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="200px"
            app:layout_constraintTop_toBottomOf="@id/chapter2"
            android:textSize="38dp"
            android:id="@+id/chapter3"
            android:textColor="#000000"
            android:text="챕터3" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="200px"
            app:layout_constraintTop_toBottomOf="@id/chapter3"
            android:textSize="38dp"
            android:id="@+id/chapter4"
            android:textColor="#000000"
            android:text="챕터4" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="200px"
            android:textSize="38dp"
            app:layout_constraintTop_toBottomOf="@id/chapter4"
            android:id="@+id/chapter5"
            android:textColor="#000000"
            android:text="챕터5" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="200px"
            android:textSize="38dp"
            app:layout_constraintTop_toBottomOf="@id/chapter5"
            android:id="@+id/chapter6"
            android:textColor="#000000"
            android:text="챕터6" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="200px"
            android:textSize="38dp"
            app:layout_constraintTop_toBottomOf="@id/chapter6"
            android:id="@+id/keyword"
            android:textColor="#000000"
            android:text="키워드" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>