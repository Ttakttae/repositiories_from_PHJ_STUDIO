<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mainactivity.Univercity">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:background="#FFFFFF"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:src="@drawable/seoulunivercity"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:textColor="#000000"
            android:text="서울대학교 권장도서 목록"
            android:layout_gravity="center"
            android:textSize="23dp" />

    </LinearLayout>

    <Button
        android:id="@+id/btn1"
        android:layout_width="match_parent"
        android:background="#00FF0000"
        android:layout_height="100dp" />

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_below="@id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:gravity="left"
            android:src="@drawable/yeonsaeunivercity"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:text="연세대학교 권장도서 목록"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:textSize="23dp" />

    </LinearLayout>

    <Button
        android:id="@+id/btn2"
        android:layout_below="@id/linearLayout"
        android:layout_width="match_parent"
        android:background="#00FF0000"
        android:layout_height="100dp" />

    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_below="@id/linearLayout6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:background="#FFFFFF"
            android:src="@drawable/koreaunivercity"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:textColor="#000000"
            android:text="고려대학교 권장도서 목록"
            android:layout_gravity="center"
            android:textSize="23dp" />

    </LinearLayout>

    <Button
        android:id="@+id/btn3"
        android:layout_below="@id/linearLayout6"
        android:layout_width="match_parent"
        android:background="#00FF0000"
        android:layout_height="100dp" />

    <LinearLayout
        android:id="@+id/linearLayout8"
        android:layout_below="@id/linearLayout7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:background="#FFFFFF"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:src="@drawable/sungkyunkwanunivercity"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:text="성균관대학교 권장도서 목록"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:textSize="23dp" />

    </LinearLayout>

    <Button
        android:id="@+id/btn4"
        android:layout_below="@id/linearLayout7"
        android:layout_width="match_parent"
        android:background="#00FF0000"
        android:layout_height="100dp" />

</RelativeLayout>